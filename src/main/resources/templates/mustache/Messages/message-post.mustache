    <div class="main">
        <div class="wrapper-h3">
            <h3>메세지 보내기</h3>
        </div>
        <div class="tabletop">
            <form>
                <table class="table">
                    <tr>
                        <th>제목</th>
                        <td><input type="text" id="title" value="제목없음"></td>
                    </tr>
                    <tr>
                        <th>받는 사람</th>
                        <td colspan="3">
                            <input type="text" id="recipients">
                        </td>
                    </tr>
                    <tr>
                        <th colspan="4">보낼 내용</th>
                    </tr>
                    <tr>
                        <td colspan="4"><textarea id="content"></textarea></td>
                    </tr>
                </table>

                <input type="hidden" id="author" value="{{messageAuthor}}">
            </form>
        </div>

        <div class="btn-input">
            <button type="button" class="btn btn-primary" id="btn-messageSave">등록</button>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
        </div>


    </div>
