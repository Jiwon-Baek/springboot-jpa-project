{{>layout/header}}

    <h1> Join Page </h1>
<form>
    <div class="form-group">
            <label for="user_id">아이디</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="아이디를 입력하세요" required>
        <div class="text-center small mt-2" id="checkMsg" style="color: red"></div>
    </div>
    <div class="form-group">
        <label for="password"> 비밀번호 </label>
        <input type="password" class="form-control" id="password" placeholder="비밀번호를 입력하세요">
    </div>
    <div class="form-group">
        <label for="name"> 이름</label>
        <textarea class="form-control" id="name" placeholder="이름을 입력하세요"></textarea>
    </div>
    <div class="fom-group">
        <label for ="email">이메일</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="이메일을 입력하세요"/>

    </div>
</form>
<button type="button" class="btn btn-primary" id="btn-signup">가입하기</button><br/>
<a href="/login">로그인</a>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript">

    $("#username").blur(function() {

        $.ajax({
            type: "POST",
            url: "/api/v1/idCheck",
            data:{
                "username": $('#username').val()
            }
            }).done(function(data) {
            if ($.trim(data) == "YES") {
                if ($('#username').val() != '') {
                    $('#checkMsg').html('<p style="color:blue">사용 가능한 ID 입니다.</p>');
                }
            } else if($.trim(data) == "NO") {
                if ($('#username').val() != '') {
                    $('#checkMsg').html('<p style="color:red">이미 사용중인 ID 입니다.</p>');
                    $('#username').val('');
                    $('#username').focus();
                }
            }
        })
    });

</script>

{{>layout/footer}}