{{>layout/header}}


<h1> Join Page </h1>
<form>
    <div class="form-group">
        <label for="user_id">아이디</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="아이디를 입력하세요" required>
        <div class="text-center small mt-2" id="checkId" style="color: red"></div>
    </div>
    <div class="form-group">
        <label for="password">비밀번호</label>
        <div class="content_content">
            <input type="password" id="password" class="pw" placeholder="비밀번호를 입력하세요">
        </div>
        <label for="password">비밀번호 확인</label>
        <div class="content_content">
            <input type="password" id="password2" class="pw" placeholder="비밀번호를 확인하세요">
        </div>
        <div class="text-center small mt-2" id="checkPw"></div>
    </div>
    <div class="form-group">
        <label for="name"> 이름</label>
        <textarea class="form-control" id="name" placeholder="이름을 입력하세요"></textarea>
    </div>
    <div class="fom-group">
        <label for="email">이메일</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="이메일을 입력하세요"/>
        <select id="emailSelect">
        <option value="">선택</option>
        <option value="@naver.com">@naver.com</option>
        <option value="@gamil.com">@gamil.com</option>
        <option value="@hanmail.net">@hanmail.net</option>
    </select>
    </div>
</form>
<button type="button" class="btn btn-primary" id="btn-signup">가입하기</button><br/>
<div class="text-center small mt-2" id="checkAll"></div>
<a href="/login">로그인</a>


{{>layout/footer}}