{{>layout/header}}


<!-- 게시판 검색 -->
<div class="form-group row justify-content-center">
    <div class="w100" style="padding-right:10px">
        <select id="searchType">
            <option value="title">제목</option>
            <option value="author">작성자</option>
        </select>
    </div>
    <div class="w300" style="padding-right:10px">
        <input type="text" class="form-control form-control-sm" id="keyword">
    </div>
    <div>
        <button class="btn btn-primary" id="btn-search">검색</button>
    </div>
</div>

<!-- 목록 출력 영역 -->
<div class="wrapper">
    <table class="table">
        <thead>
        <tr>
            <th class="tdId">번호</th>
            <th class="tdId"></th>
            <th>제목</th>
            <th class="author">작성자</th>
            <th class="createdDate">작성일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td class="tdId">{{id}}</td>
                <td class="tdId"></td>
                <td class="bold"><a href="/posts/detail/{{id}}">{{title}}</a></td>
                <td class="author">{{author}}</td>
                <td class="createdDate">{{createdDate}}</td>
            </tr>
        {{/posts}}
        {{#postsA}}
            <tr>
                <td class="tdId">{{id}}</td>
                <td class="tdId"></td>
                <td class="bold"><a href="/posts/detail/{{id}}">{{title}}</a></td>
                <td class="author">{{author}}</td>
                <td class="createdDate">{{createdDate}}</td>
            </tr>
        {{/postsA}}
        {{#postsT}}
            <tr>
                <td class="tdId">{{id}}</td>
                <td class="tdId"></td>
                <td class="bold"><a href="/posts/detail/{{id}}">{{title}}</a></td>
                <td class="author">{{author}}</td>
                <td class="createdDate">{{createdDate}}</td>
            </tr>
        {{/postsT}}
        </tbody>
    </table>
    <div>
        {{#pageList}}
            <a href="javascript:;" class="pageNum"  value="{{listNum}}">{{listNum}}</a>
        {{/pageList}}
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
    var page= "";

    $(".pageNum").on("click",function() {

        var page = $(this).attr('value')-1;

        window.location.href = '/posts?page='+page;

    });
</script>

<link href="/app/css/posts-list.css" rel="stylesheet" type="text/css">
{{>layout/footer}}